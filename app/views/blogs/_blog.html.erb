<div id="<%= dom_id blog %>">
  <div class="header">
    <h3 class="inline title">
      <%= link_to "#{blog.name} (#{blog.posts.count} posts)", edit_blog_path(blog) %>
    </h3>

    <div class="inline add-post">
      <%= link_to "Add Post", new_blog_post_path(blog) %>

      <% if admin? %>
        | <%= link_to("Admin: Delete blog", blog_path(blog), action: :delete) %>
      <% end %>
    </div>
  </div>

  <% blog.posts.each do |post| %>
    <ul>
      <li><%= render post, blog: blog %>
    </ul>
  <% end %>

  <hr/>

</div>
